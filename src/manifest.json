{
    "manifest_version": 3,
    "name": "Discord Token Checker",
    "version": "1.0.2",
    "description": "Check your Discord tokens and login",
    "author": "MLGRussianXP",
    "icons": {
        "128": "img/logo/icon128.png"
    },

    "permissions": [
        "scripting",
        "contextMenus"
    ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Discord Token Checker"
    },
    "background": {
        "service_worker": "js/service-worker.js",
        "type": "module"
    },
    "host_permissions": [
        "http://discord.com/*/",
        "https://discord.com/*/"
    ]
}